<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Employee List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    .inactive {
      background-color: #f8d7da !important;
    }
    img.emp-photo {
      width: 60px;
      height: 60px;
      object-fit: cover;
      border-radius: 50%;
    }
  </style>
</head>
<body>

<%- include("partials/navbar") %>

<section class="container py-5">
  <h2 class="mb-4">All Employees</h2>

  <!-- 🔍 Search Filter -->
  <form class="d-flex mb-4" method="GET" action="/admin/employees">
    <input type="text" name="search" class="form-control me-2" placeholder="Search by name or role..." value="<%= search || '' %>" />
    <button type="submit" class="btn btn-primary">Search</button>
  </form>

  <table class="table table-bordered align-middle">
    <thead class="table-dark">
      <tr>
        <th>Photo</th>
        <th>ID</th>
        <th>Name</th>
        <th>Role</th>
        <th>Contact</th>
        <th>Salary</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% employees.forEach(emp => { %>
        <tr class="<%= emp.status === 'Inactive' ? 'inactive' : '' %>">
          <td>
            <% if (emp.photo) { %>
              <img src="/uploads/<%= emp.photo %>" alt="Photo" class="emp-photo" />
            <% } else { %>
              <span class="text-muted">No photo</span>
            <% } %>
          </td>
          <td><%= emp.id %></td>
          <td><%= emp.name %></td>
          <td><%= emp.role %></td>
          <td><%= emp.contact %></td>
          <td>$<%= emp.salary %></td>
          <td><%= emp.status %></td>
          <td>
            <% if (emp.status === 'Active') { %>
              <form method="POST" action="/admin/deactivate/<%= emp.id %>" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Deactivate</button>
              </form>
            <% } else { %>
              <form method="POST" action="/admin/activate/<%= emp.id %>" style="display:inline;">
                <button type="submit" class="btn btn-success btn-sm">Activate</button>
              </form>
            <% } %>
            <a href="/admin/edit-employee/<%= emp.id %>" class="btn btn-warning btn-sm ms-1">Edit</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<%- include("partials/footer") %>
</body>
</html>
