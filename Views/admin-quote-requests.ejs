<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Quote Requests - Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    .quote-img {
      max-width: 100px;
      height: auto;
    }
  </style>
</head>
<body>
<%- include("partials/navbar") %>

<div class="container py-5">
  <h2 class="mb-4">ðŸ“‹ Customer Quote Requests</h2>

  <% if (quoteRequests.length === 0) { %>
    <p>No quote requests yet.</p>
  <% } else { %>
    <table class="table table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Customer</th>
          <th>Email</th>
          <th>Service</th>
          <th>Preferred Date</th>
          <th>Submitted</th>
          <th>Image</th>
        </tr>
      </thead>
      <tbody>
        <% quoteRequests.forEach((q, i) => { %>
          <tr>
            <td><%= q.customer %></td>
            <td><%= q.email %></td>
            <td><%= q.service %></td>
            <td><%= q.preferredDate %></td>
            <td><%= q.submittedOn %></td>
            <td>
              <% if (q.image) { %>
                <img src="/uploads/<%= q.image %>" class="quote-img" />
              <% } else { %>
                No image
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>

<%- include("partials/footer") %>
</body>
</html>
