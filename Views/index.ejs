<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>EliteHomePainters</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    .fade-in {
      opacity: 0;
      transform: translateY(40px);
      transition: all 0.8s ease;
    }
    .fade-in.show {
      opacity: 1;
      transform: translateY(0);
    }
    .cta-strip {
      background: #0d6efd;
      color: white;
      padding: 40px 0;
      text-align: center;
    }
    .cta-strip h3 {
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <%- include("partials/navbar") %>

  <header class="text-white text-center py-5" style="background-color: #007bff">
    <div class="container">
      <h1 class="display-4 fade-in">Professional House Painting Services</h1>
      <p class="lead fade-in">Reliable. Affordable. On-Time. Every Time.</p>
      <a href="/quote" class="btn btn-light btn-lg mt-3 fade-in">Get a Free Quote</a>
    </div>
  </header>

  <section class="container my-5 fade-in">
    <h2 class="text-center mb-4">Recent Projects</h2>
    <div class="row justify-content-center">
      <% if (typeof images !== 'undefined') { %>
        <% images.slice(0, 3).forEach(img => { %>
          <div class="col-md-4 mb-3">
            <img src="/uploads/<%= img.image %>" class="img-fluid rounded shadow" alt="<%= img.caption %>">
          </div>
        <% }) %>
      <% } %>
    </div>
    <div class="text-center">
      <a href="/gallery" class="btn btn-outline-primary mt-3">View Full Gallery</a>
    </div>
  </section>

  <section class="cta-strip fade-in">
    <h3>Need a Quote for Your Home?</h3>
    <p>Call us at <strong>+64 123 456 789</strong> or <a href="/contact" class="btn btn-light btn-sm">Contact Us</a></p>
  </section>

  <%- include("partials/footer") %>

  <script>
    const revealEls = document.querySelectorAll('.fade-in');
    const revealObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('show');
        }
      });
    });
    revealEls.forEach(el => revealObserver.observe(el));
  </script>
</body>
</html>
