<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Generate Payslip</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f9f9f9;
    }
    .form-wrapper {
      background-color: #fff;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
  </style>
</head>
<body>

  <%- include("partials/navbar") %>

  <div class="container py-5">
    <div class="form-wrapper mx-auto" style="max-width: 600px;">
      <h2 class="mb-4 text-center">ðŸ§¾ Generate Employee Payslip</h2>
      <form method="POST" action="/admin/generate-payslip">
        <div class="mb-3">
          <label class="form-label">Select Employee</label>
          <select name="empId" class="form-select" required>
            <option value="" disabled selected>-- Select Employee --</option>
            <% employees.forEach(emp => { %>
              <option value="<%= emp.id %>">
                <%= emp.name %> (<%= emp.id %>)
              </option>
            <% }) %>
          </select>
        </div>
        <div class="mb-3">
          <label class="form-label">Month</label>
          <input type="text" name="month" class="form-control" placeholder="e.g. July 2025" required />
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">
            ðŸ“„ Download PDF
          </button>
        </div>
      </form>
    </div>
  </div>

  <%- include("partials/footer") %>
</body>
</html>
